{
  "compilerOptions": {
    "checkJs": false,
    "target": "es2021",
    "module": "esnext",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "lib",
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ],
}
