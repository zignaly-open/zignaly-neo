{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "checkJs": false,
    "preserveSymlinks": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "sourceMap": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "declaration": true,
    "outDir": "lib",
    "declarationMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}